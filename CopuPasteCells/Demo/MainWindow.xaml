<Window x:Class="Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid    
            AutoGenerateColumns="False"
            ItemsSource="{Binding FilteredList, UpdateSourceTrigger=PropertyChanged}"
              local:DataGridClipboardBehavior.Enabled="True"
            SelectionUnit="Cell"
            >
            <DataGrid.Columns>
                <DataGridTemplateColumn
                     Header="First name"
                     ClipboardContentBinding="{Binding FirstName}"
                     SortMemberPath="FirstName">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate DataType="local:Employee">
                            <TextBlock Padding="2,0" Text="{Binding FirstName}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Binding="{Binding LastName}" Header="Last name" />

                <DataGridTextColumn Binding="{Binding Age}" Header="Age" />

                <DataGridTextColumn Binding="{Binding Salary}" Header="Salary" />

                <DataGridTextColumn Binding="{Binding StartDate}" Header="Start Date" />

                <DataGridTextColumn Binding="{Binding Manager}" Header="Manager"/>

            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
